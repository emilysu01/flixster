<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F9F9F9"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MovieDetailsActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/ivPrimaryImage"
        android:text="TextView"
        android:typeface="sans"
        android:textStyle="bold"
        android:textColor="#FF6392"
        android:textAppearance="@android:style/TextAppearance.Large"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/nunitobold"
        app:fontFamily="@font/nunitobold"
        />

    <RatingBar
        android:id="@+id/rbVoteAverage"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentLeft="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="73dp"
        android:layout_toEndOf="@+id/ivPrimaryImage"

        android:numStars="5"
        android:scaleX="3"
        android:scaleY="3"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPrimaryImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:lineSpacingExtra="5dp"
        android:typeface="sans"
        android:textColor="#5AA9E6"
        app:layout_constraintTop_toBottomOf="@+id/rbVoteAverage"
        tools:layout_editor_absoluteX="51dp"
        android:fontFamily="@font/nunitoregular"
        app:fontFamily="@font/nunitoregular"/>

    />

    <ImageView
        android:id="@+id/ivPrimaryImage"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>